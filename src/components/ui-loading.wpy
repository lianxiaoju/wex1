    </view>
  </view>
</template>

<script>
  import wepy from 'wepy';
  export default class UILoading extends wepy.component {
    constructor() {
      super();
      this.data = this._defaultConfig();
    }
    _defaultConfig() {
      return {
        visible: false,
        content: '加载中',
        bgColor: 'white'
      };
    }
    data = {};
    methods = {
      noop(e) {
        // DoNothing
      }
    };
    show(options) {
      const _this = this;
      let conf = _this._defaultConfig();
      if ('string' === typeof options) {
        conf = Object.assign(conf, {
          content: String(options) || _this._defaultConfig().content
        });
      } else {
        conf = Object.assign(conf, options);
      }
      _this.visible = true;
      _this.content = conf.content;
      _this.bgColor = conf.bgColor;
      setTimeout(() => _this.$apply(), 1);
    }
    hide() {
      const _this = this;
      const conf = _this._defaultConfig();
      for (let prop in conf) {
        _this[prop] = conf[prop];
      }
      _this.$apply();
    }
  }
</script>
